@inherits LayoutComponentBase

<div class="page">
    <main>
        <div class="top-row px-4 bg-body-secondary" style="border: none">
            <button class="btn me-auto" @onclick="@ToggleDarkModeClickedAsync"><i class="fas @(AppState.UseDarkMode ? "fa-sun" : "fa-moon")"></i></button>
            <span>v0.1</span>
        </div>

        <div class="container pt-4">
            @Body
        </div>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>